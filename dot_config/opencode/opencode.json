{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.2",
  "small_model": "zai-coding-plan/glm-4.7",
  "share": "disabled",
  "compaction": {
    "auto": true,
    "prune": true
  },
  "enabled_providers": ["openai", "github-copilot", "zai-coding-plan"],
  "autoupdate": true,
  "plugin": [
    "oh-my-opencode@v3.0.0-beta.10",
    "opencode-openai-codex-auth@v.4.4.0",
    "opencode-wakatime@v1.1.1",
    "cc-safety-net@v0.5.1",
    "@simonwjackson/opencode-direnv",
    "@plannotator/opencode@v0.6.6"
  ],
  "mcp": {
    "call-me": {
      "enabled": false,
      "type": "local",
      "command": ["npm", "--prefix", "~/code_projects/personal/call-me/server", "run", "start"],
      "timeout": 60000,
      "environment": {
        "CALLME_PHONE_PROVIDER": "telnyx"
      }
    }
  },
  "experimental": {
    "aggressive_truncation": true
  },
  "provider": {}
}
